/**
 * Implements hook_block_info().
 */
function exp_sp_session_timeout_block_info() {
  $blocks = array();

  $blocks['info'] = array(
    'info' => t('Automated Logout info'),
  );

  return $blocks;
}

/**
 * Implements hook_block_view().
 */
function exp_sp_session_timeout_block_view($delta = '') {
	global $theme_key, $user;
	$css_module_optional = array('type' => 'file', 'group' => CSS_DEFAULT);
	drupal_add_css(drupal_get_path('module', 'exp_sp_session_timeout').'/exp_sp_session_timeout.css', $css_module_optional);
  $block = array();

  if (_exp_sp_session_timeout_prevent()) {
    // Don't display the block if the user is not going
    // to be logged out on this page.
    return;
  }

  $block['subject'] = t('Autologout warning block');

  if (_exp_sp_session_timeout_refresh_only()) {
    $block['content'] = t('Autologout does not apply on the current page, you will be kept logged in whilst this page remains open.');
  }
  elseif (module_exists('jstimer') && module_exists('jst_timer')) {
    $block['content'] = array(drupal_get_form('exp_sp_session_timeout_create_block_form'));
  }
  else {
    $timeout = (int) variable_get('exp_sp_session_timeout_timeout', 1800);
    $block['content'] = t('You will be logged out in !time if this page is not refreshed before then.', array('!time' => format_interval($timeout)));
  }

  return $block;
}

