<?php 

class AdministrationNotificationDeleteBase extends AdministrationNotificationTestHelper
{
	public function deleteNotificationTestCase($scope = 'all'){
		
		// Based on the scope set the data to test
		if ($scope == 'all') {
			$testCases = $this->testcases['notificationDelete'];
		} else {
			$testCases = array($this->testcases['notificationDelete'][$scope]);
		}
		
		foreach($testCases as $test){
			$notificationTitle = $this->getNotificationTitle($test['id']);
			debug("Notification name to delete: " . $notificationTitle);
	
			//drupalPost($path, $edit, $submit, $options, $headers, $form_html_id);
			$notificationId = $test['id'];
			$deletePath = 'ajax/admincore/deleteprocessobject/' . $notificationId . '/notification_template';
			$out = $this->drupalPost($deletePath, array(), t('Delete'));
			$this->verbose('Request to: ' . $this->getUrl() .	'<hr />' . $this->content);
	
			$notificationStatus = $this->getNotificationStatus($test['id']);
			debug("Notification status : " . $notificationStatus);
		}
	
	}
}

class AdministrationNotificationDeleteAll extends AdministrationNotificationDeleteBase
{
public static function getInfo() {
		return array(
				'name' => 'Administration - Notification - Delete - AllTest',
				'description' => 'Module : exp_sp_administration_notification',
				'group' => '1504 - Administration - Manage - Notification - Delete',
		);
	}

	public function testNotificationDeleteAll() {
		$this->deleteNotificationTestCase('all');
		$this->manageAdminNotification();
	}
}

