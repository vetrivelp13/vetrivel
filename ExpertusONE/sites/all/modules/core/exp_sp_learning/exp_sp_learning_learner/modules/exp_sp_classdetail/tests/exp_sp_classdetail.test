  public function testClassDetails(){
  	// Retrive Course Detail's page content
  	$this->getClassDetailsPageComponents();
  	// On Edit Click - To rebuld the form for edit.
  //	$this->editTopic();
  }
  
  
  private function getClassDetailsPageComponents(){
  	// set refer to prevent access denied error
