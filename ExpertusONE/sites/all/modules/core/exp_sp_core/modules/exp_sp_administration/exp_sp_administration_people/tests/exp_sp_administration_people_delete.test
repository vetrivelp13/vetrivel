<?php 

class AdministrationUserDeleteBase extends AdministrationUserTestHelper
{
	public function deleteUserTestCase($scope = 'all'){
		
		// Based on the scope set the data to test
		if ($scope == 'all') {
			$testCases = $this->testcases['userDelete'];
		} else {
			$testCases = array($this->testcases['userDelete'][$scope]);
		}
		
		foreach($testCases as $test){
			$userTitle = $this->getUserTitle($test['id']);
			debug("User name to delete: " . $userTitle);
	
			//drupalPost($path, $edit, $submit, $options, $headers, $form_html_id);
			$userId = core_encrypt($test['id']);
			$deletePath = 'ajax/admincore/deleteprocessobject/' . $userId . '/user';
			$out = $this->drupalPost($deletePath, array(), t('Delete'));
			$this->verbose('Request to: ' . $this->getUrl() .	'<hr />' . $this->content);
	
			$userStatus = $this->getUserStatus($test['id']);
			debug("User status : " . $userStatus);
		}
	
	}
}

class AdministrationUserDeleteAll extends AdministrationUserDeleteBase
{
public static function getInfo() {
		return array(
				'name' => 'Administration - User - Delete - AllTest',
				'description' => 'Module : exp_sp_administration_people',
				'group' => '1201 - Administration - People - User - Delete',
		);
	}

	public function testUserDeleteAll() {
		$this->deleteUserTestCase('all');
		$this->manageAdminUser();
	}
}

