<?php 

class AdministrationOrganizationDeleteBase extends AdministrationOrganizationTestHelper
{
	public function deleteOrganizationTestCase($scope = 'all'){
		
		// Based on the scope set the data to test
		if ($scope == 'all') {
			$testCases = $this->testcases['organizationDelete'];
		} else {
			$testCases = array($this->testcases['organizationDelete'][$scope]);
		}
		
		foreach($testCases as $test){
			$organizationTitle = $this->getOrganizationTitle($test['id']);
			debug("Organization name to delete: " . $organizationTitle);
	
			//drupalPost($path, $edit, $submit, $options, $headers, $form_html_id);
			$organizationId = $test['id'];
			$deletePath = 'ajax/admincore/deleteprocessobject/' . $organizationId . '/Organization';
			$out = $this->drupalPost($deletePath, array(), t('Delete'));
			$this->verbose('Request to: ' . $this->getUrl() .	'<hr />' . $this->content);
	
			$organizationStatus = $this->getOrganizationStatus($test['id']);
			debug("Organization status : " . $organizationStatus);
		}
	
	}
}

class AdministrationOrganizationDeleteAll extends AdministrationOrganizationDeleteBase
{
public static function getInfo() {
		return array(
				'name' => 'Administration - Organization - Delete - AllTest',
				'description' => 'Module : exp_sp_administration_people',
				'group' => '1202 - Administration - People - Organization - Delete',
		);
	}

	public function testOrganizationDeleteAll() {
		$this->deleteOrganizationTestCase('all');
		$this->manageAdminOrganization();
	}
}

