/**
 * Implementation of hook_init().
 */
function exp_sp_administration_people_init() {
	try {
  include_once "exp_sp_administration_people.inc";
  } catch (Exception $ex) {
  	watchdog_exception('exp_sp_administration_people_init', $ex);
  	expertusErrorThrow($ex);
  }
}

/**
 * Implementation of hook_menu().
 */
function exp_sp_administration_people_menu() {
 try {
 		$items = array();

    $items['administration/people'] = array(
    'title' => t('People'),
    'page callback' => 'empty_value',
    'access callback' => 'user_access',
    'access arguments' => array('HR Admin Perm'),
    'type' => MENU_CALLBACK
    );
 
	return $items;
	} catch (Exception $ex) {
		watchdog_exception('exp_sp_administration_people_menu', $ex);
		expertusErrorThrow($ex);
	}
}

