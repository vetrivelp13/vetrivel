<?php 

class AdministrationGroupDeleteBase extends AdministrationGroupTestHelper
{
	public function deleteGroupTestCase($scope = 'all'){
		
		// Based on the scope set the data to test
		if ($scope == 'all') {
			$testCases = $this->testcases['groupDelete'];
		} else {
			$testCases = array($this->testcases['groupDelete'][$scope]);
		}
		
		foreach($testCases as $test){
			$groupTitle = $this->getGroupTitle($test['id']);
			debug("Group name to delete: " . $groupTitle);
	
			//drupalPost($path, $edit, $submit, $options, $headers, $form_html_id);
			$groupId = $test['id'];
			$deletePath = 'ajax/admincore/deleteprocessobject/' . $groupId . '/Grp';
			$out = $this->drupalPost($deletePath, array(), t('Delete'));
			$this->verbose('Request to: ' . $this->getUrl() .	'<hr />' . $this->content);
	
			$groupStatus = $this->getGroupStatus($test['id']);
			debug("Group status : " . $groupStatus);
		}
	
	}
}

class AdministrationGroupDeleteAll extends AdministrationGroupDeleteBase
{
public static function getInfo() {
		return array(
				'name' => 'Administration - Group - Delete - AllTest',
				'description' => 'Module : exp_sp_administration_people',
				'group' => '1203 - Administration - People - Group - Delete',
		);
	}

	public function testGroupDeleteAll() {
		$this->deleteGroupTestCase('all');
		$this->manageAdminGroup();
	}
}

