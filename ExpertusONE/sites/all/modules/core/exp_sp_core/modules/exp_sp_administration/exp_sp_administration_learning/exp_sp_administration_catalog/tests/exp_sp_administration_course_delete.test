<?php 

class AdministrationCourseDeleteBase extends AdministrationCourseTestHelper
{
	public function deleteCourseTestCase($scope = 'all'){
		
		// Based on the scope set the data to test
		if ($scope == 'all') {
			$testCases = $this->testcases['courseDelete'];
		} else {
			$testCases = array($this->testcases['courseDelete'][$scope]);
		}
		
		foreach($testCases as $test){
			$courseTitle = $this->getcourseTitle($test['id']);
			debug("Course name to delete: " . $courseTitle);
	
			//drupalPost($path, $edit, $submit, $options, $headers, $form_html_id);
			$courseId = $test['id'];
			$deletePath = 'ajax/admincore/deleteprocessobject/' . $courseId . '/Course';
			$out = $this->drupalPost($deletePath, array(), t('Delete'));
			$this->verbose('Request to: ' . $this->getUrl() .	'<hr />' . $this->content);
	
			$courseStatus = $this->getCourseStatus($test['id']);
			debug("Course status : " . $courseStatus);
		}
	
	}
}

class AdministrationCourseDeleteAll extends AdministrationCourseDeleteBase
{
public static function getInfo() {
		return array(
				'name' => 'Administration - Course - Delete - AllTest',
				'description' => 'Module : exp_sp_administration_people',
				'group' => '1101 - Administration - Learning - Course - Delete',
		);
	}

	public function testcourseDeleteAll() {
		$this->deleteCourseTestCase('all');
		$this->manageAdminCourse();
	}
}

