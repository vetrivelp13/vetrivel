class AdministrationGroupUpdateBase extends AdministrationGroupTestHelper
{
	public function updateGroupTestCase($scope = 'all') {
		$ctoolModel = array(
				'modelWidth' => 890,
				'modelClass' => 'ctools-modal-ctools-admin-role-addedit-style',
				'modelTitle' => t('Group'),
