	public function getSurveyTitle($surveyId = '') {
		$surveyTitle = db_query ( "SELECT title FROM slt_survey WHERE type = :type and id = :survey_id", array (
				':type' => 'sry_det_typ_sry',
				':survey_id' => $surveyId 
		) )->fetchField ();
		return $surveyTitle;
	}
	// To check how many questions are attached for the particular survey
	public function getSurveyQuestionCount($surveyId = '') {
		$surveyCount = db_query ( "SELECT count(question_id) FROM slt_survey_groups_questions WHERE survey_id = :survey_id", array (
				':survey_id' => $surveyId 
		) )->fetchField ();
		return $surveyCount;
	}
	// To check how many classes are attached for the particular survey
	public function getSurveyMappingCount($surveyId = '') {
		$surveymapCount = db_query ( "SELECT count(survey_id) FROM slt_survey_mapping WHERE survey_id = :survey_id", array (
				':survey_id' => $surveyId 
		) )->fetchField ();
		return $surveymapCount;
	}
	public function getSurveyStatus($surveyId = '') {
		$surveyStatus = db_query ( "SELECT status FROM slt_survey WHERE type = :type and id = :survey_id", array (
				':type' => 'sry_det_typ_sry',
				':survey_id' => $surveyId 
		) )->fetchField ();
		return $surveyStatus;
	}
	public function getSurveyId($search_str = '') {
		$select = db_select ( 'slt_survey', 'survey' );
		$select->addField ( 'survey', 'id', 'id' );
		$select->condition ( 'survey.status', 'sry_det_sry_del', '!=' );
		$select->condition ( 'survey.type', 'sry_det_typ_sry' );
		$select->condition ( 'survey.title', '%' . db_like ( $search_str ) . '%', 'LIKE' );
		$select->orderBy ( 'survey.id', 'DESC' );
		$select->range ( 0, 1 );
		$surveyId = $select->execute ()->fetchField ();
		return $surveyId;
	}
	/**
	 * Export functionality test case
	 * Created By :Maheswari.M
	 * Created Date:02.01.2017
	 */
	public function exportSurveys($opt = 'csv') {
		debug ( 'Survey Id -->' . print_r ( $this->id, 1 ), 4 );
		$selSurveyQry = db_select ( 'slt_survey', 'per' );
		$selSurveyQry->addField ( 'per', 'title', 'title' );
		$selSurveyQry->condition ( 'per.id', $this->id, 'IN' );
		$selSurveyRes = $selSurveyQry->execute ()->fetchAll ();
		debug ( 'Survey Name List-->' . print_r ( $selSurveyRes, 1 ), 4 );
		if ($opt == 'csv') {
			// customized the drupalGet() using options parameter
			$this->drupalGet ( 'administration/survey/surveydetails/export', array (
					'filewrite' => 1,
					'testCase' => 'csv' 
			) );
			if ($this->assertResponse ( 200 ) == 'pass') {
				foreach ( $selSurveyRes as $groupName ) {
					$this->assertRaw ( $groupName->title, 'Contents of the exported file has ' . $groupName->title . ' and it is correct.' );
				}
			}
		} elseif ($opt == 'pdf') {
			$this->drupalGet ( 'administration/survey/surveydetails/print', array (
					'filewrite' => 1,
					'testCase' => 'pdf' 
			) );
			if ($this->assertResponse ( 200 ) == 'pass') {			
				foreach ( $selSurveyRes as $groupName ) {
					$this->assertText ( $groupName->title, 'Contents of the exported file has ' . $groupName->title . ' and it is correct.' );
				}
			}
		}
	}
