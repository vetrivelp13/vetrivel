<%

	if(GLOBALPARAMS_H5P.action.params.text == "" || GLOBALPARAMS_H5P.action.params.text == undefined)
		GLOBALPARAMS_H5P.action.params.text = "<table class=\"h5p-table\"><thead><tr><th scope=\"col\">Heading Column 1</th><th scope=\"col\">Heading Column 2</th></tr></thead><tbody><tr><td>Row 1 Col 1</td><td>Row 1 Col 2</td></tr><tr><td>Row 2 Col 1</td><td>Row 2 Col 2</td></tr></tbody></table>";
	
%>
  <div class="field text h5peditor-interaction-text">
   <label class="h5peditor-label-wrapper"><span class="h5peditor-label h5peditor-required">Text:</span><textarea id="formattextbox" rows=3 cols=40 class="h5peditor-text" value=""><%=GLOBALPARAMS_H5P.action.params.text%></textarea></label>
   <div class="h5peditor-field-description">Label displayed next to interaction icon.</div>
  </div> 
  
  <div class="field text h5peditor-interaction-label">
   <label class="h5peditor-label-wrapper"><span class="h5peditor-label">Label:</span><input class="h5peditor-text" style="width:365px;min-width:365px;" id="labelid" type="text" value="<%=GLOBALPARAMS_H5P.label%>" maxlength="100"></label>
   <div class="h5peditor-field-description">Label displayed next to interaction icon.</div>
  </div> 
   <script>
      CKEDITOR.config.removePlugins = 'Save,Print,Preview,Find,About,Maximize,ShowBlocks';
	  CKEDITOR.replace("formattextbox");
	  CKEDITOR.on('instanceReady',function(){
	  	//ns.$(".cke_wysiwyg_frame").contents().find("body").css("overflow","auto");
	  	ns.$(".cke_wysiwyg_frame").contents().find("body").css("height","50px");
	  	hideckebuttons("Table");
	  });
  		if(GLOBALPARAMS_H5P.displayType == "poster")
  		{
  			ns.$("#labelid").parent().parent().hide();
  		}
		vtip();
		
   </script>
	
