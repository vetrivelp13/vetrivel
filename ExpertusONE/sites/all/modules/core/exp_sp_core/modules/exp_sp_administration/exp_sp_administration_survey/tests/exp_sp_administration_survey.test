/**
 * Survey change status test cases
 * Created By :Maheswari.M
 * Created Date:29.12.2016
 * To check the functionality for the survey publish/unpublish .
 */
class AdministrationSurveyStatusBase extends AdministrationSurveyTestHelper {
	public function statusGroupTestCase($scope = 'all') {
		// Based on the scope set the data to test
		if ($scope == 'all') {
			$testCases = $this->testcases ['surveyStatus'];
		} else {
			$testCases = array (
					$this->testcases ['surveyStatus'] [$scope] 
			);
		}
		foreach ( $testCases as $test ) {
			$surveyId = $test ['id'];
			if ($surveyId != '') {
				// To check how many class are attached for the particular survey
				$survey_map = $this->getSurveyMappingCount ( $surveyId );
				if ($survey_map > 0)
					debug ( 'Survey mapped to the course/class,Published status' );
				else {
					// To check how many questions are attached for the particular survey
					$num_question = $this->getSurveyQuestionCount ( $surveyId );
					if ($num_question > 0) {
						// we can publish/unpublish the survey when the survey have questions
						$status = $this->getSurveyStatus ( $surveyId );
						$this->changeStatus ( $surveyId, $status );
						$status = $this->getSurveyStatus ( $surveyId );
						$this->changeStatus ( $surveyId, $status );
						$this->content = $this->listContent;
						$this->getAdministrationSurveyList ();
					} else
						// without question we can't publish/unpublish the survey
						debug ( 'Survey have no question' );
				}
			} else
				debug ( 'The survey id not found' );
		}
	}
	// change the status of the survey
	public function changeStatus($surveyId, $status) {
		if ($status == 'sry_det_sry_atv') {
			// survey is already published status
			$this->changeSurveyStatus ( $surveyId );
			$this->assertResponse ( 200, 'Survey status unpublished successfully' );
		} else {
			// survey is unpublished status
			$this->changeSurveyStatus ( $surveyId );
			$this->assertResponse ( 200, 'Survey status published successfully' );
		}
	}
	public function changeSurveyStatus($surveyId) {
		$this->drupalPostAJAX ( null, $edit, 'Save', '?q=ajax/administration/survey/survey-assessment/publish-and-unpublish/' . $surveyId . '/Survey', array (), array (), '', $post_field );
	}
}
