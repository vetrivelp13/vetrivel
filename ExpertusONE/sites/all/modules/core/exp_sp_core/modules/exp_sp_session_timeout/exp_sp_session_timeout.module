  $form['exp_sp_session_timeout_reset'] = array(
    '#type' => 'button',
    '#value' => t('Reset Timeout'),
    '#weight' => 1,
    '#limit_validation_errors' => FALSE,
    '#executes_submit_callback' => FALSE,
    '#ajax' => array(
      'callback' => 'exp_sp_session_timeout_ahah_set_last',
    ),
  );

  $form['timer'] = array(
    '#markup' => $markup,
