/**
 * Custom themeing function, to display roles as a table with checkboxes and
 * textfields for logout threshold.
 */
function theme_exp_sp_session_timeout_render_table($variables) {
  $output = "";
  if ($variables) {
    $element = $variables['element'];
  }

  $header = array(
    'enable' => t('Enable'),
    'name' => t('Role Name'),
    'timeout' => t('Timeout (seconds)'),
  );

  $rows = array();
  foreach (user_roles(TRUE) as $key => $role) {
    $rows[] = array(
      'enable' => drupal_render($element['exp_sp_session_timeout_roles']['exp_sp_session_timeout_role_' . $key]),
      'name' => t($role),
      'timeout' => drupal_render($element['exp_sp_session_timeout_roles']['exp_sp_session_timeout_role_' . $key . '_timeout']),
    );
  }

  $table = theme('table', array('header' => $header, 'rows' => $rows));
  $output = $table;

  return $output;
}

/**
 * Returns HTML for the exp_sp_session_timeout block.
 */
function theme_exp_sp_session_timeout_block($variables) {
  $time_remaining = $variables['time_remaining'];
  $timeformat = $variables['timeformat'];

  return "<div id='timer'><span class='jst_timer'>
    <span class='interval' style='display: none;'>$time_remaining</span>
    <span class='format_txt' style='display:none;'>$timeformat</span>
    </span></div>";
}

/**
 * Checks to see if timeout threshold is outside max/min values. Only done here
 * to centrilize and stop repeated code. Hard coded min, configurable max.
 *
 * @param int $timeout
 *   The timeout value in seconds to validate
 * @param int $max_timeout
 *   (optional) A maximum timeout. If not set the current system
 *   default maximum is used.
 *
 * @return bool
 */
function exp_sp_session_timeout_timeout_validate($timeout, $max_timeout = NULL) {
  $validate = FALSE;

  if (is_null($max_timeout)) {
    $max_timeout = variable_get('exp_sp_session_timeout_max_timeout', '172800');
  }

  if (!is_numeric($timeout) || $timeout < 0 || ($timeout > 0 && $timeout < 60) || $timeout > $max_timeout) {
    // Less then 60, greater then max_timeout and is numeric.
    // 0 is allowed now as this means no timeout.
    $validate = FALSE;
  }
  else {
    $validate = TRUE;
  }

  return $validate;
}

/**
 * Adds a field to user/edit to change that users logout.
 */
function exp_sp_session_timeout_form_user_profile_form_alter(&$form, $form_state) {
  if ($form['#user_category'] != 'account') {
    // Only include the timeout on main user profile.
    return;
  }

  global $user;
  $current_uid = $user->uid;
  $userid = $form_state['user']->uid;
  $access = FALSE;

  // If user has access to change, and they are changing their own and only
  // thier own timeout. Or they are an admin.
  if ((user_access('change own logout threshold') && $current_uid == $userid) || user_access('administer exp_sp_session_timeout')) {
    $access = TRUE;
  }

  if ($access) {
    $form['exp_sp_session_timeout_user_' . $userid] = array(
      '#type' => 'textfield',
      '#title' => t('Your current logout threshold'),
      '#default_value' => variable_get('exp_sp_session_timeout_user_' . $userid, ""),
      '#size' => 8,
      '#description' => t('How many seconds to give a user to respond to the logout dialog before ending their session.'),
      '#element_validate' => array('_exp_sp_session_timeout_user_uid_timeout_validate'),
    );

    $form['#submit'][] = 'exp_sp_session_timeout_user_profile_submit';
  }
}

/**
 * Form validation.
 */
function _exp_sp_session_timeout_user_uid_timeout_validate($element, &$form_state) {
  $max_timeout = variable_get('exp_sp_session_timeout_max_timeout', 172800);
  $timeout = $element['#value'];

  // Set error if it has a value that isn't strictly a number between 60 and max.
  if ($timeout != "" && ($timeout < 60 || $timeout > $max_timeout || !is_numeric($timeout))) {
    form_error($element, t('The timeout must be an integer greater than 60, and less then %max.', array('%max' => $max_timeout)));
  }
}

/**
 * Handle submission of timeout threshold in user/edit.
 */
function exp_sp_session_timeout_user_profile_submit(&$form, &$form_state) {
  global $user;
  $current_uid = $user->uid;
  $userid = $form_state['user']->uid;
  $access = FALSE;

  if ((user_access('change own logout threshold') && $current_uid == $userid) || user_access('administer exp_sp_session_timeout')) {
    $access = TRUE;
  }

  // Access is reused here as a security measure. Not only will the element not
  // display but wont submit without access.
  if ($access) {
    $userid = $form_state['user'] -> uid;
    $val = trim($form_state['values']['exp_sp_session_timeout_user_' . $userid]);
    if (empty($val)) {
      variable_del('exp_sp_session_timeout_user_' . $userid);
    }
    else {
      variable_set('exp_sp_session_timeout_user_' . $userid, $val);
    }
  }
}

/**
 * Implements hook_init().
 */
function exp_sp_session_timeout_init() {
  global $user;

  if (empty($user->uid)) {
    if (!empty($_GET['exp_sp_session_timeout_timeout']) && $_GET['exp_sp_session_timeout_timeout'] == 1 && empty($_POST)) {
      _exp_sp_session_timeout_inactivity_message();
    }
    return;
  }

  // Check if JS should be included on this request.
  if (_exp_sp_session_timeout_prevent()) {
    return;
  }

  // Check if anything wants to be refresh only. This URL would
  // include the javascript but will keep the login alive whilst
  // that page is opened.
  $refresh_only = _exp_sp_session_timeout_refresh_only();

  $now = time();
  $timeout = _exp_sp_session_timeout_get_user_timeout();
  $timeout_padding = variable_get('exp_sp_session_timeout_padding', 10);
  $redirect_url = variable_get('exp_sp_session_timeout_redirect_url', 'user/login');
  $redirect_query = drupal_get_destination() + array('exp_sp_session_timeout_timeout' => 1);
  $no_dialog = variable_get('exp_sp_session_timeout_no_dialog', FALSE);
  $use_alt_logout_method = variable_get('exp_sp_session_timeout_use_alt_logout_method', FALSE);
  drupal_add_library('system', 'ui.dialog');

  // Get all settings JS will need for dialog.
  $msg = t(variable_get('exp_sp_session_timeout_message', 'Your session is about to expire. Do you want to reset it?'));
  $settings = array(
    'timeout' => $refresh_only ? ($timeout * 500) : ($timeout * 1000),
    'timeout_padding' => $timeout_padding * 1000,
    'message' => $msg,
    'redirect_url' => url($redirect_url, array('query' => $redirect_query)),
    'title' => t('@name Alert', array('@name' => variable_get('site_name', 'Drupal'))),
    'refresh_only' => $refresh_only,
    'no_dialog' => $no_dialog,
    'use_alt_logout_method' => $use_alt_logout_method,
  );

  // If this is an AJAX request, then the logout redirect url should still be
  // referring to the page that generated this request
  if (isset($_SERVER['HTTP_X_REQUESTED_WITH']) && strtolower($_SERVER['HTTP_X_REQUESTED_WITH']) == 'xmlhttprequest') {
    global $base_url;
    $relative_url = str_replace($base_url . '/', '', $_SERVER['HTTP_REFERER']);
    $settings['redirect_url'] = url($redirect_url, array('query' => array('destination' => urlencode($relative_url)), 'exp_sp_session_timeout_timeout' => 1));
  }

  drupal_add_library('system', 'drupal.ajax');
  drupal_add_js(array('exp_sp_session_timeout' => $settings), 'setting');
  drupal_add_js(drupal_get_path('module', 'exp_sp_session_timeout') . "/exp_sp_session_timeout.js");

  // We need a backup plan if JS is disabled.
  if (!$refresh_only && isset($_SESSION['exp_sp_session_timeout_last'])) {
    // If time since last access is > than the timeout + padding, log them out.
    if (($now - $_SESSION['exp_sp_session_timeout_last']) >= ($timeout + (int) $timeout_padding)) {
      _exp_sp_session_timeout_logout();

      // User has changed so force Drupal to remake decisions based on user.
      global $theme, $theme_key;
      drupal_static_reset();
      $theme = NULL;
      $theme_key = NULL;
      menu_set_custom_theme();
      drupal_theme_initialize();
      _exp_sp_session_timeout_inactivity_message();
    }
    else {
      $_SESSION['exp_sp_session_timeout_last'] = $now;
    }
  }
  else {
    $_SESSION['exp_sp_session_timeout_last'] = $now;
  }
}

/**
 * Implements hook_exp_sp_session_timeout_prevent().
 */
function exp_sp_session_timeout_exp_sp_session_timeout_prevent() {
  global $user;

  // Don't include exp_sp_session_timeout JS checks on ajax callbacks.
  $paths = array(
    'system',
    'exp_sp_session_timeout_ajax_get_time_left',
    'exp_sp_session_timeout_ahah_logout',
    'exp_sp_session_timeout_ahah_set_last',
  );

  if (in_array(arg(0), $paths)) {
    return TRUE;
  }

  // If user is anonymous or has no timeout set.
  if (empty($user->uid) || (!_exp_sp_session_timeout_get_user_timeout())) {
    return TRUE;
  }

  // If the user has checked remember_me via the remember_me module.
  if (!empty($user->data['remember_me'])) {
    return TRUE;
  }
}

/**
 * Implements hook_exp_sp_session_timeout_refresh_only().
 */
function exp_sp_session_timeout_exp_sp_session_timeout_refresh_only() {
  // Check to see if an open admin page will keep login alive.
  if (!variable_get('exp_sp_session_timeout_enforce_admin', FALSE) && path_is_admin(current_path())) {
    return TRUE;
  }
}

/**
 * Implements hook_page_build().
 *
 * Add a form element to every page which is used to detect if the page was
 * loaded from browser cache. This happens when the browser's back button is
 * pressed for example. The JS will set the value of the hidden input element
 * to 1 after initial load. If this is 1 on subsequent loads, the page was
 * loaded from cache and an exp_sp_session_timeout timeout refresh needs to be triggered.
 */
function exp_sp_session_timeout_page_build(&$page) {
  if (!_exp_sp_session_timeout_prevent()) {
    $page['page_bottom']['exp_sp_session_timeout'] = array(
      '#markup' => '<form id="exp_sp_session_timeout-cache-check"><input type="hidden" id="exp_sp_session_timeout-cache-check-bit" value="0" /></form>',
    );
  }
}

/**
 * AJAX callback that returns the time remaining for this user is logged out.
 */
function exp_sp_session_timeout_ahah_get_remaining_time() {
  $time_remaining_ms = _exp_sp_session_timeout_get_remaining_time() * 1000;

  // Reset the timer.
  $markup = exp_sp_session_timeout_create_timer();
  $commands = array();
  $commands[] = ajax_command_replace('#timer', $markup);
  $commands[] = ajax_command_settings(array('time' => $time_remaining_ms));

  return array('#type' => 'ajax', '#commands' => $commands);
}

/**
 * Ajax callback to reset the last access session variable.
 */
function exp_sp_session_timeout_ahah_set_last() {
  $_SESSION['exp_sp_session_timeout_last'] = time();

   // Let others act.
  global $user;
  module_invoke_all('auto_logout_session_reset', $user);

  // Reset the timer.
  $markup = exp_sp_session_timeout_create_timer();
  $commands = array();
  $commands[] = ajax_command_replace('#timer', $markup);

  return array('#type' => 'ajax', '#commands' => $commands);
}

/**
 * AJAX callback that performs the actual logout and redirects the user.
 */
function exp_sp_session_timeout_ahah_logout($type = 'ajax') {
  _exp_sp_session_timeout_logout();

  if ($type !== 'ajax') {
    $redirect_url = variable_get('exp_sp_session_timeout_redirect_url', 'user/login');
    drupal_goto($redirect_url);
  }

  drupal_exit();
}

/**
 * Get the time remaining before logout.
 *
 * @return int
 *   Number of seconds remaining.
 */
function _exp_sp_session_timeout_get_remaining_time() {
  $timeout = _exp_sp_session_timeout_get_user_timeout();
  $time_passed = isset($_SESSION['exp_sp_session_timeout_last']) ? time() - $_SESSION['exp_sp_session_timeout_last'] : 0;
  return $timeout - $time_passed;
}

/**
 * Go through every role to get timeout value, default is the global timeout.
 */
function _exp_sp_session_timeout_get_role_timeout() {
  $default_timeout = variable_get('exp_sp_session_timeout_timeout', 1800);
  $roles = user_roles(TRUE);
  $role_timeout = array();

  // Go through roles, get timeouts for each and return as array.
  foreach ($roles as $rid => $role) {
    if (variable_get('exp_sp_session_timeout_role_' . $rid, FALSE)) {
      $timeout_role = variable_get('exp_sp_session_timeout_role_' . $rid . '_timeout', $default_timeout);
      $role_timeout[$rid] = $timeout_role;
    }
  }

  return $role_timeout;
}

/**
 * Get a user's timeout in seconds.
 *
 * @param int $uid
 *   (Optional) Provide a user's uid to get the timeout for.
 *   Default is the logged in user.
 *
 * @return int
 *   The number of seconds the user can be idle for before being
 *   logged out. A value of 0 means no timeout.
 */
function _exp_sp_session_timeout_get_user_timeout($uid = NULL) {

  if (is_null($uid)) {
    // If $uid is not provided, use the logged in user.
    global $user;
  }
  else {
    $user = user_load($uid);
  }

  if ($user->uid == 0) {
    // Anonymous doesn't get logged out.
    return 0;
  }

  if (is_numeric($user_timeout = variable_get('exp_sp_session_timeout_user_' . $user->uid, FALSE))) {
    // User timeout takes precedence.
    drupal_alter('exp_sp_session_timeout_timeout', $user_timeout);
    return $user_timeout;
  }

  // Get role timeouts for user.
  if (variable_get('exp_sp_session_timeout_role_logout', FALSE)) {
    $user_roles = $user->roles;
    $output = array();
    $timeouts = _exp_sp_session_timeout_get_role_timeout();

    foreach ($user_roles as $rid => $role) {
      if (isset($timeouts[$rid])) {
        $output[$rid] = $timeouts[$rid];
      }
    }

    // Assign the lowest timeout value to be session timeout value.
    if (!empty($output)) {
      // If one of the user's roles has a unique timeout, use this.
      $timeout = min($output);
      drupal_alter('exp_sp_session_timeout_timeout', $timeout);
      return $timeout;
    }
  }

  // If no user or role override exists, return the default timeout.
  $timeout = variable_get('exp_sp_session_timeout_timeout', 1800);
  drupal_alter('exp_sp_session_timeout_timeout', $timeout);
  return $timeout;
}

/**
 * Helper to perform the actual logout.
 */
function _exp_sp_session_timeout_logout() {
  global $user;

  if (variable_get('exp_sp_session_timeout_use_watchdog', FALSE)) {
    watchdog('user', 'Session automatically closed for %name by exp_sp_session_timeout.', array('%name' => $user->name));
  }

  // Destroy the current session.
  module_invoke_all('user_logout', $user);
  session_destroy();

  // Load the anonymous user.
  $user = drupal_anonymous_user();
}

/**
 * Helper to determine if a given user should be autologged out.
 */
function _exp_sp_session_timeout_logout_role($user) {
  if (variable_get('exp_sp_session_timeout_role_logout', FALSE)) {
    foreach ($user->roles as $key => $role) {
      if (variable_get('exp_sp_session_timeout_role_' . $key, FALSE)) {
        return TRUE;
      }
    }
  }

  return FALSE;
}

/**
 * Display the inactivity message if required.
 */
function _exp_sp_session_timeout_inactivity_message() {
  $message = variable_get('exp_sp_session_timeout_inactivity_message', 'You have been logged out due to inactivity.');
  drupal_alter('exp_sp_session_timeout_message', $message);
  if (!empty($message)) {
    drupal_set_message($message);
  }
}

/**
 * Determine if exp_sp_session_timeout should be prevented.
 *
 * @return bool
 *   TRUE if there is a reason not to exp_sp_session_timeout
 *   the current user on the current page.
 */
function _exp_sp_session_timeout_prevent() {
  foreach (module_invoke_all('exp_sp_session_timeout_prevent') as $prevent) {
    if (!empty($prevent)) {
      return TRUE;
    }
  }

  return FALSE;
}

/**
 * Determine if connection should be refreshed.
 *
 * @return bool
 *   TRUE if something about the current context
 *   should keep the connection open. FALSE and
 *   the standard countdown to exp_sp_session_timeout applies.
 */
function _exp_sp_session_timeout_refresh_only() {
  foreach (module_invoke_all('exp_sp_session_timeout_refresh_only') as $module_refresh_only) {
    if (!empty($module_refresh_only)) {
      return TRUE;
      break;
    }
  }

  return FALSE;
}

/**
 * Implements hook_user_login().
 *
 * Delete stale sessions for the user on login. This stops
 * session_limit module thinking the user has reached their
 * session limit.
 */
function exp_sp_session_timeout_user_login(&$edit, $account) {

  // Cleanup old sessions.
  $timeout = _exp_sp_session_timeout_get_user_timeout($account->uid);

  if (empty($timeout)) {
    // Users that don't get logged have their sessions left.
    return;
  }

  $timeout_padding = variable_get('exp_sp_session_timeout_padding', 10);
  $timestamp = time() - ($timeout + $timeout_padding);

  // Find all stale sessions.
  $results = db_select('sessions', 's')
    ->fields('s')
    ->condition('uid', $account->uid)
    ->condition('timestamp', $timestamp, '<')
    ->orderBy('timestamp', 'DESC')
    ->execute();

  $sids = array();
  foreach ($results as $session) {
    $sids[] = $session->sid;
  }

  if (!empty($sids)) {
    // Delete stale sessions at login.
    db_delete('sessions')
      ->condition('sid', $sids, 'IN')
      ->execute();
  }
}
