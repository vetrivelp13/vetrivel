<?php 

class AdministrationLocationDeleteBase extends AdministrationLocationTestHelper
{
	public function deleteLocationTestCase($scope = 'all'){
		
		// Based on the scope set the data to test
		if ($scope == 'all') {
			$testCases = $this->testcases['locationDelete'];
		} else {
			$testCases = array($this->testcases['locationDelete'][$scope]);
		}
		
		foreach($testCases as $test){
			$locationTitle = $this->getLocationTitle($test['id']);
			debug("Location name to delete: " . $locationTitle);
	
			//drupalPost($path, $edit, $submit, $options, $headers, $form_html_id);
			$locationId = $test['id'];
			$deletePath = 'ajax/admincore/deleteprocessobject/' . $locationId . '/location';
			$out = $this->drupalPost($deletePath, array(), t('Delete'));
			$this->verbose('Request to: ' . $this->getUrl() .	'<hr />' . $this->content);
	
			$locationStatus = $this->getLocationStatus($test['id']);
			debug("Location status : " . $locationStatus);
		}
	
	}
}

class AdministrationLocationDeleteAll extends AdministrationLocationDeleteBase
{
public static function getInfo() {
		return array(
				'name' => 'Administration - Location - Delete - AllTest',
				'description' => 'Module : exp_sp_administration_location',
				'group' => '1502 - Administration - Manage - Location - Delete',
		);
	}

	public function testLocationDeleteAll() {
		$this->deleteLocationTestCase('all');
		$this->manageAdminLocation();
	}
}

