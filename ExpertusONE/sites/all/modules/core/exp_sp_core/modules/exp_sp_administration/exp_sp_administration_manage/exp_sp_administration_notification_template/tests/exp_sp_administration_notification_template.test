	public function getNotificationTemplateId($search_str = '') {
		$select = db_select('slt_notification_frame', 'nt');
		$select->addField('nt', 'id', 'id');
		$select->condition('nt.notification_subject', '%' . db_like($search_str) . '%', 'LIKE');
		$select->orderBy('nt.id', 'DESC');
		$select->range(0,1);
		$notificationTempId = $select->execute()->fetchField();
		return $notificationTempId;
	}
