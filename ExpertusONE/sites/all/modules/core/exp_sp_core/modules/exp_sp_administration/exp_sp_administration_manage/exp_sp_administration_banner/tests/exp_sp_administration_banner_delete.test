<?php 

class AdministrationBannerDeleteBase extends AdministrationBannerTestHelper
{
	public function deleteBannerTestCase($scope = 'all'){
		
		// Based on the scope set the data to test
		if ($scope == 'all') {
			$testCases = $this->testcases['bannerDelete'];
		} else {
			$testCases = array($this->testcases['bannerDelete'][$scope]);
		}
		
		foreach($testCases as $test){
			$bannerTitle = $this->getBannerTitle($test['id']);
			debug("Banner name to delete: " . $bannerTitle);
	
			//drupalPost($path, $edit, $submit, $options, $headers, $form_html_id);
			$bannerId = $test['id'];
			$deletePath = 'ajax/admincore/deleteprocessobject/' . $bannerId . '/banner';
			$out = $this->drupalPost($deletePath, array(), t('Delete'));
			$this->verbose('Request to: ' . $this->getUrl() .	'<hr />' . $this->content);
	
			$bannerStatus = $this->getBannerStatus($test['id']);
			debug("Banner status : " . $bannerStatus);
		}
	
	}
}

class AdministrationBannerDeleteAll extends AdministrationBannerDeleteBase
{
public static function getInfo() {
		return array(
				'name' => 'Administration - Banner - Delete - AllTest',
				'description' => 'Module : exp_sp_administration_banner',
				'group' => '1503 - Administration - Manage - Banner - Delete',
		);
	}

	public function testBannerDeleteAll() {
		$this->deleteBannerTestCase('all');
		$this->manageAdminBanner();
	}
}

