<?php 

class AdministrationCertificateDeleteBase extends AdministrationCertificateTestHelper
{
	public function deleteCertificateTestCase($scope = 'all'){
		
		// Based on the scope set the data to test
		if ($scope == 'all') {
			$testCases = $this->testcases['certificateDelete'];
		} else {
			$testCases = array($this->testcases['certificateDelete'][$scope]);
		}
		
		foreach($testCases as $test){
			$certificateTitle = $this->getCertificateTitle($test['id']);
			debug("Certificate name to delete: " . $certificateTitle);
	
			//drupalPost($path, $edit, $submit, $options, $headers, $form_html_id);
			$certificateId = $test['id'];
			$deletePath = 'ajax/admincore/deleteprocessobject/' . $certificateId . '/certificate';
			$out = $this->drupalPost($deletePath, array(), t('Delete'));
			$this->verbose('Request to: ' . $this->getUrl() .	'<hr />' . $this->content);
	
			$certificateStatus = $this->getCertificateStatus($test['id']);
			//debug("Certificate status : " . $certificateStatus);
		}
	
	}
}

class AdministrationCertificateDeleteAll extends AdministrationCertificateDeleteBase
{
public static function getInfo() {
		return array(
				'name' => 'Administration - Certificate - Delete - AllTest',
				'description' => 'Module : exp_sp_administration_notification',
				'group' => '1505 - Administration - Manage - Certificate - Delete',
		);
	}

	public function testCertificateDeleteAll() {
		$this->deleteCertificateTestCase('all');
	}
}

